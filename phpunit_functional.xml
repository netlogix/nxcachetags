<phpunit
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation=".Build/vendor/phpunit/phpunit/phpunit.xsd"
        backupGlobals="true"
        bootstrap=".Build/vendor/typo3/testing-framework/Resources/Core/Build/FunctionalTestsBootstrap.php"
        colors="true"
        failOnWarning="true"
        failOnRisky="true"
        displayDetailsOnTestsThatTriggerWarnings="true"
        timeoutForSmallTests="0"
        cacheResult="false"
        beStrictAboutTestsThatDoNotTestAnything="false"
>


    <testsuites>
        <testsuite name="Functional Tests">
            <directory>Tests/Functional/</directory>
        </testsuite>
    </testsuites>

    <source>
        <include>
            <directory suffix=".php">Classes</directory>
        </include>
    </source>

    <coverage>
        <report>
            <php outputFile=".Build/logs/coverage/functional.cov"/>
            <html outputDirectory=".Build/logs/coverage/functional"/>
        </report>
    </coverage>

    <logging>
        <junit outputFile=".Build/logs/junit/functional.xml"/>
    </logging>

    <php>
        <ini name="date.timezone" value="Europe/Berlin"/>
        <ini name="display_errors" value="1"/>
        <env name="TYPO3_CONTEXT" value="Testing"/>
        <env name="typo3DatabaseDriver" value="pdo_sqlite"/>
        <env name="typo3DatabaseName" value="test"/>
    </php>
</phpunit>
